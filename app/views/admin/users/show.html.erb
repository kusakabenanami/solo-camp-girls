<h4><%= @user.name %>さんのユーザー詳細</h4>

<div class="row mt-4">
  <div class="col-sm-8">

  </div>
  <div class="col-sm-8">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td>ユーザーID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>ユーザー名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>退会ステータス</td>
          <% if @user.is_withdrawal == false %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td class="text-secondary">退会</td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="form-group row mt-4">
  <div class="col-sm-9 offset-sm-3">
    <%= link_to '編集する', edit_admin_user_path, class: "btn btn-success" %>
    <%#= link_to '注文履歴一覧を見る', admin_items_path, class: "btn btn-primary" %>
  </div>
</div>