<h1>User info</h1>
   <%= image_tag user.get_profile_image(100, 100), class: "profile-image" %>
  <table class="table">
    <tbody>
      <tr>
        <td>Name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>Introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary" do %>
  <i class="fa-solid fa-user-cog"></i>
  <% end %>


<h2>New book</h2>
<%= form_with model: book_new, method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <br>
  <%= f.submit 'Create Book' %>
<% end %>
  </br>