<h1>ユーザー情報</h1>
   <%= image_tag user.get_profile_image(100, 100), class: "profile-image" %>
  <table class="table">
    <tbody>
      <tr>
        <td>ユーザー名</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>自己紹介</td>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to public_users_information_edit_path(user), class: "btn btn-outline-secondary" do %>
  <i class="fa-solid fa-user-cog"></i>
  <% end %>


<h2>新規投稿</h2>
<%= form_with model: camp_new, method: :post do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>コメント</h4>
  <%= f.text_area :body %>

  <br>
  <%= f.submit 'Create Book' %>
<% end %>
  </br>